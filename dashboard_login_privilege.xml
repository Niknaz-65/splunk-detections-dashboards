<dashboard version="1.1" theme="light">
<dashboard version="1.1" theme="light">
  <label>Login Privilege Dashboard</label>

  <row>
    <panel>
      <title>Special Privileges (4672) – Top Accounts</title>
      <chart>
        <search>
          <query>index=winlogs sourcetype=WinEventLog:Security EventCode=4672 earliest=-7d@d | stats count by Account_Name | sort - count | head 15</query>
          <earliest>-7d@d</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>

  <row>
    <panel>
      <title>Failed Logons (4625) – Recent Events</title>
      <event>
        <search>
          <query>index=winlogs sourcetype=WinEventLog:Security EventCode=4625 earliest=-24h@h | table _time host Account_Name Failure_Reason IpAddress Workstation_Name</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="count">20</option>
      </event>
    </panel>
  </row>
</dashboard>
